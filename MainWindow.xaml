<Window x:Class="GameWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GameWPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="1080" Width="1920">
    <Canvas x:Name="myCanvas" Focusable="True" Background="Black" KeyDown="myCanvas_KeyDown" KeyUp="myCanvas_KeyUp">

        <Rectangle x:Name="player" Height="50" Width="60" Fill="Yellow" Canvas.Left="930" Canvas.Top="946"/>

        <Label x:Name="scoreText" Content="Score: 0" FontSize="28" FontWeight="Bold" Foreground="White" />
        <Label x:Name="damageText" Content="Score: 0" FontSize="28" FontWeight="Bold" Foreground="White" Canvas.Left="1696" HorizontalAlignment="Left" VerticalAlignment="Center"  />

    </Canvas>
</Window>
